<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yoonhuijung.dogcareproject.menu.UpdateAccount">

    <LinearLayout
        android:id="@+id/natural"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/update_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="57dp"
        app:civ_border_color="#cccccc"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="198dp"
        android:text="이름" />

    <EditText
        android:id="@+id/update_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-225dp"
        android:ems="10"
        android:hint="수정할이름을입력해주세요"
        android:textColorHint="@color/colorwhilte"
        android:textColor="@color/colorwhilte"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/carrer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="246dp"
        android:text="경력사항" />

    <ImageView
        android:id="@+id/updateplus_btn"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/carrer_txt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp"
        android:layout_weight="1"
        android:background="@mipmap/ic_plus_button_circle"
        android:baselineAligned="false" />

    <ImageView
        android:id="@+id/update_imageview"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/carrer_txt"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-4dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/ic_save_black_svg" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="수정하기" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/update_recycler"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:clipToPadding="true" />
</RelativeLayout>