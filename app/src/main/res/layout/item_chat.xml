<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_you"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/nickname_you"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_chat_txt"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:textColor="@color/black"
            android:background="@drawable/chatroombubbleimage"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_me"
        android:layout_width="match_parent"
        android:layout_height="85dp"

        android:gravity="end">

        <TextView
            android:id="@+id/item_chat_txt_me"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:textColor="@color/black"
            android:background="@drawable/chatroombubblemeimage" />
    </LinearLayout>

</LinearLayout>